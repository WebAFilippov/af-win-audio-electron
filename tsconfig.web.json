{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/shared/**/*",
    "src/preload/index.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noUnusedLocals": false,
    "paths": {
      // ? renderer
      "@renderer/*": ["src/renderer/*"],

      // ? shared
      "@shared/*": ["src/shared/*"]
    }
  }
}
